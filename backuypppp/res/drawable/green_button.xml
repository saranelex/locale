<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><layer-list>
        <item><shape>
            <gradient android:angle="270" android:centerColor="@color/yellow" android:endColor="#036b86" android:startColor="@color/yellow"></gradient>

            <corners android:radius="5dp" />
        </shape></item>

        <item android:bottom="3dp"><shape>
            <gradient android:angle="270" android:centerColor="@color/yellow" android:endColor="@color/yellow" android:startColor="@color/yellow"></gradient>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="5dp" />
        </shape></item>
    </layer-list></item>

    <item android:state_pressed="true"><layer-list>
        <item ><shape>
            <gradient android:angle="270" android:centerColor="@color/yellow" android:endColor="@color/yellow" android:startColor="#036b86"></gradient>

            <corners android:radius="5dp" />
        </shape></item>
        <item android:top="3dp"><shape>
            <gradient android:angle="270" android:centerColor="@color/yellow" android:endColor="@color/yellow" android:startColor="@color/yellow"></gradient>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="5dp" />
        </shape></item>
    </layer-list></item>

</selector>