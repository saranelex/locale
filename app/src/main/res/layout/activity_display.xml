<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/my_gray"
        android:orientation="vertical"
        android:layout_marginTop="36dp"
        android:id="@+id/linearLayout4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.00"
            android:text=" Concept, design, and developed by "
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.00"
            android:paddingBottom="5dp"
            android:text=" Dr. M. Sabesh "
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:text=" Sr, Scientist, ICAR-CICR"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/spac"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/txtpestunknown"/>
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Under the project 'Development of interactive decision support system for cotton pest management with prerecorded voice module'" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_weight="0.00"
            android:text="" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=" Software development support: Mr. M.Saravanan" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_gray"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/Textviewabout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="About the app" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="|"/>

        <TextView
            android:id="@+id/Txtviewdisclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Disclaimer" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="|"/>

        <TextView
            android:id="@+id/Txtcopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Copyright Statement" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:text="redefining cotton cultivation"
            android:textAlignment="viewEnd"
            android:textColor="@color/brown"
            android:textSize="22dp"
            android:textStyle="italic" />
    </LinearLayout>

    <RelativeLayout
       android:layout_height="wrap_content" android:layout_width="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/test_button_image"
        android:layout_width="60dp"
        android:src="@drawable/cicrlogo"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/test_button_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Developed at"
            android:layout_marginStart="89dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/test_button_image" />

        <TextView
            android:id="@+id/test_button_text1"
            android:layout_width="wrap_content"
            android:text="ICAR-Central Institute for Cotton Research"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/test_button_text2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/test_button_image1"
            android:layout_width="60dp"
            android:src="@drawable/icar_logo"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regional Station,Coimbatore,India"
            android:layout_below="@+id/test_button_text1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.cicr.org.in"
            android:layout_below="@+id/textView20"
            android:layout_alignStart="@+id/test_button_text2" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:src="@drawable/whitearrow"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>