<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cicr.com.locale.Gallary.Aboutapp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:text="redefining cotton cultivation"
            android:textAlignment="viewEnd"
            android:textColor="@color/brown"
            android:textSize="22dp"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the App"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginStart="33dp"
        android:layout_marginTop="78dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="5dp"
android:gravity="clip_vertical"
        android:text="The Grow Good Cotton is a user friendly decision support system tool to different stakeholder for the better cotton pest management."
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="5dp"
        android:gravity="top|clip_vertical"
        android:text="This app is embedded with images, text and related voice over module for the text incorporated."
        android:layout_marginTop="26dp"
        android:id="@+id/radioButton3"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="5dp"
        android:gravity="fill_vertical"
        android:text="This app is also available in nine different Indian languages including English"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentStart="true"
        android:id="@+id/radioButton4" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="5dp"
        android:gravity="fill"
        android:text="The app work well in android based mobile phones."
        android:layout_marginTop="37dp"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentStart="true" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginLeft="5dp"
        android:gravity="fill"
        android:text="The same application also available in html version at 'www.cicr.org.in'"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioButton7" />
</RelativeLayout>
