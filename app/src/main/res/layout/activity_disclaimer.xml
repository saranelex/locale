<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cicr.com.locale.Gallary.Aboutapp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="10dp"
            android:text="redefining cotton cultivation"
            android:textAlignment="viewEnd"
            android:textColor="@color/brown"
            android:textSize="22dp"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disclaimer"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="clip_vertical"
        android:text="Sufficient care has been taken to present factual and correct information on this mobile app Grow Good Cotton of ICAR-CICR. However, this app or ICAR-CICR does not guarantee the accuracy or completeness of any information supplied to the user."
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="top|clip_vertical"
        android:text="We reserve the right to use the matter submitted in the app as well as to redistribute it to other publications that are composed by ICAR-CICR . If you rely on the information on this app, you are responsible for ensuring its accuracy or completeness by independent verification and CICR does not accept any responsibility of whatsoever nature for any consequences arising thereof."
        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="fill_vertical"
        android:text="Make no warranties that the app is free of infection by computer viruses or other contamination."
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentEnd="true" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="fill"
        android:text="Do not make any warranties or representations regarding the quality, accuracy, merchantability or fitness for purpose of any material on this app."
        android:id="@+id/radioButton5"
        android:layout_below="@+id/radioButton4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="fill"
        android:text="If you use automatic language translation services in connection with this app, you do so at your own risk."
        android:layout_marginTop="10dp"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="fill"
        android:text="Brand names mentioned  in this app shall not be an endorsement by ICAR-CICR. "
        android:layout_below="@+id/radioButton2"
        android:layout_alignStart="@+id/radioButton5"
        android:id="@+id/radioButton6" />

</RelativeLayout>
