<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <me.grantland.widget.AutofitTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:text="hello"/>

    <View
        android:id="@+id/view"
        android:layout_width="2dip"
        android:layout_height="20dip"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Management_Control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Management and Control"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/blue"
        android:background="@color/yellow"
         android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="2dip"
        android:layout_height="30dip"
        android:layout_below="@+id/Management_Control"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view1">


        <Button
            android:id="@+id/Chemical_Control"
            android:background="@drawable/green_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:text="Chemical Control"
            android:layout_below="@+id/Management_Control"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/Biological_Controlon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Management_Control"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button"
            android:padding="10dp"
            android:text="Biological Control"
            android:textColor="@color/blue"
            android:textSize="14dp" />

        <Button
            android:id="@+id/Cul_mach_control"
            android:background="@drawable/green_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="14dp"
            android:text="Cultural and Mechanical Control"
            android:layout_below="@+id/Management_Control"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <View
            android:visibility="visible"
            android:layout_height="0dip"
            android:layout_width="1dip"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/audio_btn_id"
            android:background="@drawable/green_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="AUDIO" />

        <View
            android:visibility="visible"
            android:layout_height="0dip"
            android:layout_width="5dip"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/back"
            android:background="@drawable/green_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Back"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="13dp" />
    </LinearLayout>


</RelativeLayout>